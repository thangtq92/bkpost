@using NB_Commerce.Model.Models
@model List<NB_Commerce.Model.Models.BlogPostCategoryMapping>
    @if (Model.Count > 0)
{
        <!-- start: activities-slider -->
    <div class="owl-carousel activities-slider" id="activities-slider">
        @{
            var items = Model.OrderByDescending(e => e.IsFeaturedPost).ToList();
        }
        @for (int i = 0; i <= items.Count - 1; i++)
        {
            <!-- start: item -->
            <div class="item">
                <div class="box-images">
                    <h3><a href="@Utils.GetUrlBlogPost(items[i].BlogPostId)" title="@items[i].BlogPost.Title"><img alt="show alt" src="@Utils.GetImage(items[i].BlogPost.Avatar, 285,214)" /></a></h3>
                </div>
                <!-- start: box-info-->

                <div class="box-info">
                    <h2 class="title"><a href="@Utils.GetUrlBlogPost(items[i].BlogPostId)" title="@items[i].BlogPost.Title">@items[i].BlogPost.Title</a></h2>
                </div>
                <!-- end: box-info-->
            </div>
        }
    </div>
}
