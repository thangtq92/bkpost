@using NB_Commerce.Models
@model NB_Commerce.Model.Models.Page
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.MetaTitle ?? Model.Name;
    ViewBag.MetaKeywords = Model.MetaKeywords;
    ViewBag.MetaDescription = Model.MetaDescription;
}
@*Body render:*@
@if (ViewBag.IsHome == true)
{
    
}
else {
    @Html.Action("Breadcrumb", "Widgets", new {breadcrumbs = new List<BreadcrumbModel> {new BreadcrumbModel {Link = "#", Title = Model.Name}}, homeIncluded = true, headingIncluded = true ,area = ""})
}
@Html.Raw(Model.Body)
