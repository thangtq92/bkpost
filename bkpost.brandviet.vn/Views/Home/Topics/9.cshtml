@model NB_Commerce.Model.Models.Page
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewBag.Title = Model.MetaTitle ?? Model.Name;
    ViewBag.MetaKeywords = Model.MetaKeywords;
    ViewBag.MetaDescription = Model.MetaDescription;
}
<!-- start: BANNER-TOP -->
