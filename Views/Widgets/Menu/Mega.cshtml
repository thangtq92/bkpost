@using NB_Commerce.Helpers
@model List<NB_Commerce.Models.MegaMenuModel>
<div class="megamenu clearfix">
    @foreach (var item in Model)
    {
        <ul class="col-lg-3 col-md-3 col-xs-12 link-list">
                @if (item.Children.Any())
                {
                    <li class="title">@item.Title</li>
                    foreach (var innerItem in item.Children)
                    {
                        <li><a title="@innerItem.Title" href="@innerItem.Href"><i class="fa fa-arrow-circle-right"></i>@innerItem.Title</a></li>
                    }
                }
            
        </ul>
    }
